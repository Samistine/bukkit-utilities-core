<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>bukkit-utilities</artifactId>
  <version>5.0.1</version>
  <name>BukkitUtilities</name>
  <description>A utility library containing reusuable classes and implementations for use with Bukkit.</description>

  <parent>
     <groupId>name.richardson.james.bukkit</groupId>
     <artifactId>default-pom</artifactId>
     <version>5</version>
     <relativePath />
  </parent>

  <repositories>
      <repository>
      <id>my-repo</id>
      <url>http://repository.james.richardson.name/releases</url>
    </repository>  
  </repositories>
  
  <dependencies>
     <dependency>
	   <groupId>org.apache.maven</groupId>
	   <artifactId>maven-artifact</artifactId>
	   <version>3.0.5</version>
     </dependency>
     <!-- Set dependency on Bukkit -->
     <dependency>
           <groupId>org.bukkit</groupId>
           <artifactId>bukkit</artifactId>
           <version>1.5.2-R0.1</version>
     </dependency>
  </dependencies>

  <build>
      <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-shade-plugin</artifactId>
             <!-- We want to bundle in Maven Artifact -->
            <version>1.7.1</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <artifactSet>
                    <includes>
                      <include>org.apache.maven:maven-artifact</include>
                    </includes>
                  </artifactSet>
                  <relocations>
                    <relocation>
                      <pattern>org.apache.maven.artifact</pattern>
                      <shadedPattern>name.richardson.james.bukkit.utilities.artifact</shadedPattern>
                    </relocation>
                  </relocations>
                </configuration>
              </execution>
            </executions>
          </plugin>
      </plugins>
  </build>

</project>
